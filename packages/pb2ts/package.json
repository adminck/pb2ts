{
  "name": "@adminck/pb2ts",
  "version": "0.1.0",
  "description": "Generate TypeScript HTTP clients from protobuf with google.api.http",
  "author": "adminck <adminck@example.com>",
  "license": "MulanPSL2",
  "type": "module",
  "bin": {
    "pb2ts": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "bin",
    "scripts",
    "README.md",
    "README_EN.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build:parser": "node ../../scripts/build-go.js",
    "build:parser:all": "node ../../scripts/build-all-platforms.js",
    "prepare:publish": "node ../../scripts/prepare-publish.js",
    "prepublishOnly": "npm run build && npm run build:parser:all && npm run prepare:publish",
    "postinstall": "node scripts/postinstall.js",
    "test:gen": "node ./dist/cli/index.js gen --proto ../../test/test_proto --out ./test/api"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "fs-extra": "^11.2.0",
    "jiti": "^1.21.0",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "protobuf",
    "typescript",
    "grpc",
    "http",
    "code-generator",
    "api-client",
    "restful",
    "proto3"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/adminck/pb2ts.git"
  },
  "bugs": {
    "url": "https://github.com/adminck/pb2ts/issues"
  },
  "homepage": "https://github.com/adminck/pb2ts#readme"
}
