{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug pb2ts CLI",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/packages/pb2ts/dist/cli/index.js",
            "args": [
                "gen",
                "--proto",
                "${workspaceFolder}/test/test_proto",
                "--out",
                "${workspaceFolder}/test/api"
            ],
            "cwd": "${workspaceFolder}/packages/pb2ts",
            "console": "integratedTerminal",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/packages/pb2ts/dist/**/*.js"
            ]
        }
    ]
}